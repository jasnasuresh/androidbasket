<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/catdog" />
    <TextView
        android:id="@+id/lpc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lovely pets care"
        android:textStyle="italic"
        android:fontFamily="cursive"
        android:layout_below="@id/img"
        android:textColor="#880E4F"
        android:layout_marginLeft="60dp"
        android:textSize="50sp"
        />
    <TextView
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lpc"
        android:layout_marginTop="15dp"
        android:text="Address: "
        android:textColor="#000000" />
    <ImageView
        android:id="@+id/loc"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/loc"
        android:layout_below="@id/lpc"
        android:layout_toRightOf="@id/add"
        />
    <TextView
        android:id="@+id/tvm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/loc"
        android:layout_below="@id/lpc"
        android:layout_marginTop="10dp"
        android:text="Near Mar Ivanios Vidya Nagar, Nalanchira, Trivandrum"
        android:textColor="#000000"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/shape"
        android:layout_below="@id/tvm"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="              Grooming,
               Vet Clinic,
               Care center
            and lots more...!"
        android:layout_below="@id/tvm"
        android:layout_marginTop="60dp"
        android:textColor="#4A148C"
        android:textStyle="bold"
        android:fontFamily=""
        android:layout_toRightOf="@id/loc"
        />

</RelativeLayout>